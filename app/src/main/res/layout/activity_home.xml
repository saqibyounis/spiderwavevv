<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="submitITR"
                android:text="Submit ITR"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/btnGreen"
                app:qb_radius="100"
                app:qb_strokeColor="@color/btnGreenDark"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:id="@+id/QButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="loan"
                android:text="LOANs"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/btnGreen"
                app:qb_radius="100"
                app:qb_strokeColor="@color/btnGreenDark"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:id="@+id/QButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="logastics"
                android:text="Logistics"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/btnGreen"
                app:qb_radius="100"
                app:qb_strokeColor="@color/btnGreenDark"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:id="@+id/QButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="checkRewards"
                android:text="Check Reward"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/btnGreen"
                app:qb_radius="100"
                app:qb_strokeColor="@color/btnGreenDark"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:id="@+id/QButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="logout"
                android:text="Log Out"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/btnBlue1"
                app:qb_radius="100"
                app:qb_strokeColor="@color/btnBlueDark"
                app:qb_strokeWidth="5"

                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>